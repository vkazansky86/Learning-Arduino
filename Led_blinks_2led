int val;                                                                     // определяем переменную для порта COM5
int ledPin = 10;                                                             // определяем порт для светодиода желтого
int ledBPin = 8;                                                             // определяем порт для светодиода голубого
int value_low = 4;                                                           // определяем переменную для тусклого режима

void setup() {
Serial.begin(9600);                                                          // открываем порт COM5 и устанавливаем скорость общения 9600
pinMode(ledPin,OUTPUT);                                                      // настраиваем порт желтого светодиода на выдачу
pinMode(ledBPin,OUTPUT);                                                     // настраиваем порт голубого светодиода на выдачу

}

void loop() {
  val=Serial.read();                                                         // считываем переменную с порта COM5
  if(val=='R') {                                                             // если введена переменная R                                          
    for (int value = 0 ; value < 255; value=value+1){                        // постепенно повышаем яркость                       
    analogWrite(ledPin, value);                                              // подаем аналоговый сигнал на желтый светодиод для постепенного повышения яркости
    delay(15);;                                                              // задержка 5
      }
     }                                                                    
    
  else if (val=='N') {                                                       // если введена переменная N
               
    for (int value = 255; value >0; value=value-1){                          // настраиваем постепенное понижение яркости
    analogWrite(ledBPin, value);                                             // подаем аналоговый сигнал на голубой светодиод для постепенного понижения яркости
    delay(15);                                                               // устанавливаем задержку
      }  
    } 
  
  else {                                                                     // в любом другом случае
    analogWrite(ledPin, value_low);                                          // включаем слабое свечение желтого светодиода, мощность определена в value_low
    delay(5);
    }
 }
